<?xml version="1.0" encoding="UTF-8"?>
<jboss-web xmlns="http://www.jboss.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee
           http://www.jboss.org/j2ee/schema/jboss-web_10_0.xsd"
           version="10.0">

    <context-root>/</context-root>
    <security-domain>secureDomain</security-domain>

    <max-active-sessions>1000</max-active-sessions>

    <resource-ref>
        <res-ref-name>jdbc/lethbridge</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <jndi-name>java:/lethbridge</jndi-name>
    </resource-ref>

</jboss-web>